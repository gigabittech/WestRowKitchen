# West Row Kitchen Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="file:./dev.db"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
HOST=127.0.0.1
NODE_ENV=development

# ===========================================
# AUTHENTICATION & SESSION
# ===========================================
SESSION_SECRET="your-super-secret-session-key-here"
SESSION_TTL=86400000

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# FROM_EMAIL="noreply@westrowkitchen.com"
# FROM_NAME="West Row Kitchen"

# ===========================================
# STRIPE PAYMENT CONFIGURATION (Optional)
# ===========================================
# STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
# STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
# STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===========================================
# DOORDASH DELIVERY INTEGRATION
# ===========================================
# Get these from DoorDash Developer Portal: https://developer.doordash.com/
DOORDASH_API_KEY="your-doordash-api-key"
DOORDASH_API_SECRET="your-doordash-api-secret"
DOORDASH_MERCHANT_ID="your-doordash-merchant-id"

# DoorDash API Base URL (choose one):
# For Sandbox/Testing:
DOORDASH_BASE_URL="https://openapi-sandbox.doordash.com"
# For Production:
# DOORDASH_BASE_URL="https://openapi.doordash.com"

# DoorDash Webhook Security
DOORDASH_WEBHOOK_SECRET="your-doordash-webhook-secret"

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable/disable features in development
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_DELIVERY_INTEGRATION=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
